html, body
  width 100%
  height 100%

html, body, div
  margin 0
  padding 0
  font-family PingFang-SC SourceHanSansCN ;

.english-font
  font-family SFUIDisplay Roboto

color-1 = #F9DE7F
color-2 = #ffffff

.title-font-normal
  font-size 16px
  line-height 16px
  color color-2
.title-font-big
  font-size 16px
  line-height 16px
  color color-1
  @extend .english-font
.content-font-normal
  font-size 15px
  color: color-2
  // font-weight: 300
.content-font-normal-color
  font-size 15px
  color: color-1
  @extend .english-font
.content-font-big
  font-size: 21px
  color: color-1
  @extend .english-font


[aspectratio]
  position relative
[aspectratio]::before
  content ''
  display block
  width 1px
  margin-left -1px
  height 0
[aspectratio-content]
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
